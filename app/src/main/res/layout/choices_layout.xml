<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
  <TextView android:id="@+id/file_name_text_view_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
  android:layout_marginBottom="10dp" android:textSize="25dp" />
  <Button android:id="@+id/left_column_button_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:text="Check Left Column" />
  <Button android:id="@+id/right_column_button_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:text="Check Right Column" />
  <Button android:id="@+id/both_columns_button_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:text="Check Both Columns" />
  <Button android:id="@+id/custom_left_column_button_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:text="Check Left Column Custom Words" />
  <Button android:id="@+id/edit_content_button_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:text="View or Edit Content" />
  <Button android:id="@+id/delete_file_button_id"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="60dp" android:text="Delete file" />
</LinearLayout>
