<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
  <LinearLayout android:id="@+id/folder_main_view_id"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
    <TextView android:id="@+id/main_text_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp" android:textSize="18dp"
    android:text="Welcome to the Vocabulary App!"/>
    <Button android:id="@+id/continue_button_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Continue"/>
  </LinearLayout>
</ScrollView>
