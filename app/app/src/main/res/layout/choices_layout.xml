<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/file_name_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="File Name"/>
        <Button
            android:id="@+id/left_column_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Left Column"/>
        <Button
            android:id="@+id/right_column_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Right Column"/>
        <Button
            android:id="@+id/view_content_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Content"/>
    </LinearLayout>
